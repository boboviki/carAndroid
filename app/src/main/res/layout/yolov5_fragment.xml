<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ActivityView.FirstActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_show"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            app:srcCompat="@drawable/rgb"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/rec_image_show"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:scaleType="fitCenter" />


    </LinearLayout>

    <TextView
        android:id="@+id/recdata"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:padding="5dp"
        android:text="识别结果"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/SelectPicBtn"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="选择图片"
            android:textSize="8sp" />

        <Button
            android:id="@+id/RecCpuBtn"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="识别图片CPU"
            android:textSize="8sp" />
        <Button
            android:id="@+id/RecGpuBtn"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="识别图片GPU"
            android:textSize="8sp" />
        <Button
            android:id="@+id/dy3Btn"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="待用3"
            android:textSize="8sp" />
        <Button
            android:id="@+id/dy4Btn"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="待用4"
            android:textSize="8sp" />
        <Button
            android:id="@+id/dy5Btn"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="待用5"
            android:textSize="8sp" />
    </LinearLayout>


</LinearLayout>
